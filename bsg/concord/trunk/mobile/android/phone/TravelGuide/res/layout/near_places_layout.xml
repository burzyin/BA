<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="#88000000">

    <RelativeLayout android:id="@+id/title_bar" android:layout_width="match_parent"
        android:layout_height="50dp" android:layout_alignParentTop="true"
        android:background="@drawable/title_bar_bg">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@android:color/white" android:textSize="20sp"
            android:text="@string/near_places" android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button android:id="@+id/switch_grid" android:layout_width="40dp"
            android:layout_height="30dp" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:layout_marginRight="40dp"
            android:background="@drawable/round_corner_button" android:onClick="switchGrid"
            android:text="Sw" android:textSize="15sp" android:textColor="@android:color/white" />

        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_margin="2dp" android:src="@drawable/qr"
            android:background="@android:color/transparent" android:onClick="qrButtonProcess"
            android:contentDescription="@string/qr_button" />

        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" android:layout_centerVertical="true"
            android:layout_margin="2dp" android:src="@drawable/back_button"
            android:background="@android:color/transparent" android:onClick="backButtonProcess"
            android:contentDescription="@string/back_button" />
    </RelativeLayout>

    <LinearLayout android:id="@+id/top_switcher" android:layout_width="150dp"
        android:layout_height="50dp" android:layout_below="@id/title_bar"
        android:layout_centerHorizontal="true" android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" android:background="@drawable/top_switcher_bg"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/top_switcher_grid" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.33"
            android:layout_gravity="center_vertical" android:layout_margin="10dp"
            android:src="@drawable/top_switcher_near_grid_selector"
            android:background="@android:color/transparent"
            android:onClick="processTopSwitcherClick"
            android:contentDescription="@string/top_switcher_grid" />

        <ImageButton android:id="@+id/top_switcher_list" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.33"
            android:layout_gravity="center_vertical" android:layout_margin="10dp"
            android:src="@drawable/top_switcher_near_list_selector"
            android:background="@android:color/transparent"
            android:onClick="processTopSwitcherClick"
            android:contentDescription="@string/top_switcher_list" />

        <ImageButton android:id="@+id/top_switcher_map" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.33"
            android:layout_gravity="center_vertical" android:layout_margin="10dp"
            android:src="@drawable/top_switcher_near_map_selector"
            android:background="@android:color/transparent"
            android:onClick="processTopSwitcherClick"
            android:contentDescription="@string/top_switcher_map" />
    </LinearLayout>

    <LinearLayout android:id="@+id/fragment_container" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@id/title_bar"
        android:layout_above="@id/bottom_action_bar" android:layout_centerHorizontal="true"
        android:orientation="vertical" />

    <include layout="@layout/menu_layout" android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/bottom_action_bar" android:background="@drawable/bottom_bg"
        android:gravity="bottom" android:padding="2dp" android:paddingTop="2dp" />

</RelativeLayout>