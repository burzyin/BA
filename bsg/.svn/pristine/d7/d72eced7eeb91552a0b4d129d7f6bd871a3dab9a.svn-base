<html>
<head>
    <link rel="stylesheet" href="${request.getContextPath()}/css/home.css">
    <script type="text/javascript" src="${request.getContextPath()}/js/pages/home.js"></script>
    <script>
        $(function () {
            initSlideshow();
            initLinks();
        });
    </script>
</head>
<body>
    #set($page_title = "Belarus attractions")
<section>
   <header>
        <h2>#springMessage("messages.home_page.welcome")</h2>
    </header>
    <article>
        <div class="slidesWrapper">
            <div class="slides">
                <div class="slides_container">
                    <div class="slide">
                        <img src="#springMessage("slides.slide_1.image")" alt="Slide 1">
                        <p>#springMessage("slides.slide_1.text")</p>
                    </div>
                    <div class="slide">
                         <img src="#springMessage("slides.slide_2.image")" alt="Slide 2">
                        <p>#springMessage("slides.slide_2.text")</p>
                        <div class="caption" style="top:0">
                            <p>#springMessage("slides.slide_2.caption")</p>
                        </div>
                    </div>
                    <div class="slide">
                        <img src="#springMessage("slides.slide_3.image")" alt="Slide 3">
                        <p>#springMessage("slides.slide_3.text")</p>
                    </div>
                    <div class="slide">
                        <img src="#springMessage("slides.slide_4.image")" alt="Slide 4">
                        <p>#springMessage("slides.slide_4.text")</p>
                    </div>
                    <div class="slide">
                        <img src="#springMessage("slides.slide_5.image")" alt="Slide 5">
                        <p>#springMessage("slides.slide_5.text")</p>
                        <div class="caption" style="top:0">
                            <p>#springMessage("slides.slide_5.caption_p1")
                                <a href="#springMessage("slides.slide_5.caption_p2")" class="route">#springMessage("slides.slide_5.caption_p2")</a></p>
                        </div>
                    </div>
                    <div class="slide">
                        <img src="#springMessage("slides.slide_6.image")" alt="Slide 6">
                        <p>#springMessage("slides.slide_6.text")</p>
                        <div class="caption" style="top:0">
                            <p>#springMessage("slides.slide_6.caption")</p>
                        </div>
                    </div>
                </div>
           </div>
        </div>
        <button type="button" id="about">#springMessage("messages.home_page.about")</button>
    </article>
</section>
</body>
</html>