<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:id="@+id/top_switcher" android:layout_width="150dp"
        android:layout_height="50dp" android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
        android:background="@drawable/top_switcher_bg" android:orientation="horizontal">

        <ImageButton android:id="@+id/top_switcher_grid" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.33"
            android:layout_gravity="center_vertical" android:layout_margin="10dp"
            android:src="@drawable/top_switcher_near_grid_selector"
            android:background="@android:color/transparent"
            android:contentDescription="@string/top_switcher_grid" />

        <ImageButton android:id="@+id/top_switcher_map" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="0.33"
            android:layout_gravity="center_vertical" android:layout_margin="10dp"
            android:src="@drawable/top_switcher_near_map_selector"
            android:background="@android:color/transparent"
            android:contentDescription="@string/top_switcher_map" />
    </LinearLayout>

    <RelativeLayout android:id="@+id/gallery_container" android:layout_below="@+id/top_switcher"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_centerHorizontal="true" android:orientation="vertical" />
</RelativeLayout>
