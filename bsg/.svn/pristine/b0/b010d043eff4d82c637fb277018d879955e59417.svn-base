<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/place_description_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/place_image" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/place_description_table"
        android:background="#66000000"
        android:text="@string/place_description"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_above="@id/description_text_view"
        android:background="#66000000"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="@string/number"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/eye"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="@string/number"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/heart"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:text="@string/number"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/tick"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/place_description_table"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/place_description_image">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/information_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:text="@string/information_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/i"
                android:gravity="center"
                android:onClick="clickProcess" />

            <Button
                android:id="@+id/gallery_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:text="@string/gallery_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/gallery"
                android:gravity="center"
                android:onClick="clickProcess" />

            <Button
                android:id="@+id/history_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:text="@string/history_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/history"
                android:gravity="center"
                android:onClick="clickProcess" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/routes_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:text="@string/routes_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/marker"
                android:gravity="center"
                android:onClick="clickProcess" />

            <Button
                android:id="@+id/secrets_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:layout_margin="1dp"
                android:text="@string/secrets_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/secrets"
                android:gravity="center"
                android:onClick="clickProcess" />

            <Button
                android:id="@+id/audio_guide_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:layout_margin="1dp"
                android:text="@string/audio_guide_button"
                android:textSize="10sp"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/audio_guide"
                android:gravity="center"
                android:onClick="clickProcess" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
